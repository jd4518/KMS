		function doLogin() {

			if(loginFrm.loginId.value == "") {

				alert("아이디를 입력해주세요.");

				return;

			}

			if(loginFrm.loginPwd.value == "") {

				alert("패스워드를 입력해주세요.");

				return;

			}

			

			frm.submit();

		}
		</script>
